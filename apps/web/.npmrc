# Disable optional dependencies to avoid rollup platform-specific issues
optional=false
# Use npm ci for faster, more reliable installs
prefer-offline=true
# Disable audit during install for faster builds
audit=false
# Set registry to ensure consistent package resolution
registry=https://registry.npmjs.org/
# Force resolution of rollup to avoid platform-specific binary issues
rollup=^4.0.0
# Force pure JavaScript rollup
@rollup/rollup-linux-x64-gnu=npm:rollup@^4.0.0
@rollup/rollup-darwin-x64=npm:rollup@^4.0.0
@rollup/rollup-win32-x64-msvc=npm:rollup@^4.0.0
# Disable platform-specific binaries
target_platform=linux
target_arch=x64
target_libc=glibc
