{
  "buildCommand": "cd apps/web && node scripts/nuclear-option.js",
  "outputDirectory": "apps/web/build/client",
  "installCommand": "npm ci --prefer-offline --no-audit --omit=optional",
  "devCommand": "npm run dev",
  "framework": "react-router",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "apps/web/build/server/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "ROLLUP_NATIVE": "false",
    "ROLLUP_PLATFORM": "linux",
    "ROLLUP_ARCH": "x64"
  }
}
